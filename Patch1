void MainMenu(void)
{
    cout << "Menu" << endl;
		cout << "------------------" << endl;
		cout << "1. Create a Character" << endl;
		cout << "2. Delete a Character" << endl;
		cout << "3. Duel" << endl;
		cout << "4. Quit Game" << endl;
		cout << "What would you like to do?" << endl;
		cin >> userInput;
    
    if (userInput==1)
    {
    CharacterCreate();
    }
    
    else if (userInput==3)
    {
    DuelMenu();
    }
    
   else if (userInput==4)
   {
   exit (1);
   } 
   else
   {
   cout << "Invalid selection.  Please try again." << endl;
   }
}
